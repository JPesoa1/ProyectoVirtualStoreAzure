@using ProyectoNugetVirtualStore.Models;
@model List<Juegos>
@{
  
    var url = "https://storageaccounttienda.blob.core.windows.net/juego";

    List<Categorias> categorias = ViewData["CATEGORIAS"] as List<Categorias>;

    int numregistros = 0;
    string categoria = "";
    int precio = 0;
    int numeropagina = 1;
    //VAMOS A RECIBIR SIEMPRE EL NUMERO DE REGISTROS???
    if (ViewData["REGISTROS"] != null)
    {
        numregistros = (int)ViewData["REGISTROS"];
        categoria = ViewData["CATEGORIA"].ToString();
        precio = int.Parse(ViewData["PRECIO"].ToString());
    }

}
<form method="post" class="container">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Precio</label>
    <input class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" id="rango" type="range" name="precio"
           min="0" max="100" value="90" step="10">
    <p>Precio: <output id="value"></output></p>


    <label for="categorias" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Categorias</label>
    <select id="categorias" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" name="categoria">
        <option selected>Selecciona</option>
        @foreach (var item in categorias)
        {
            <option name="categoria" value="@item.NombreCategoria">@item.NombreCategoria</option>
        }

    </select>
    <button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
        Filtrar
    </button>
</form>


@if (Model != null)
{

    <nav class="container" aria-label="Page navigation example">
        <ul class="inline-flex items-center -space-x-px">
            @for (int i = 1; i <= numregistros; i += 4)
            {

                <li class="px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                    <a asp-controller="Home"
               asp-action="Filtros"
               asp-route-posicion="@i"
               asp-route-categoria="@categoria"
               asp-route-precio="@precio">
                        Página @numeropagina
                    </a>
                </li>
                numeropagina += 1;
            }



        </ul>
    </nav>







}


